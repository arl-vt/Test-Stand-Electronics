#include <stdint.h>
#include "slug.h"
#include "utils/uartstdio.h"
void testloadCellAmplifier2(void);
void testMotor2(void);
void testController2(void);

int main(void){

    uint32_t sensorVal;

    //Setup system clock , 40MHZ
    Clock_set_fastest();

    //Configure Serial monitor
    initConsole();

    //Motor Initialize
    uint32_t period = 2000; //clock/freq: 20MHz/10KHZ
    Motor_Init(period); // Initialize with 10KHZ
    UARTprintf("\n Motor Initialized! \n");

    //Load Cell Initialization
    LoadCell_init();
    UARTprintf("\n Load Cell Configured! \n");

    //Initialize debug LEDs
    RGBled_Init(1,1,1);

    //Controller initialize
    Controller_Init();
    timerEnable();
    UARTprintf("\n Controller Initialized! \n");

    //Enable system wide interrupts
    EnableInterrupts();

    while(1){
        sensorVal = getLoadCellValue();
        UARTprintf("Temp Sensor reading is: %04u\n", sensorVal);
        delayMS(3);
    }
}



void testloadCellAmplifier2(){
    uint32_t sensorVal;
    float vol;
    initConsole();
    LoadCell_init();
    EnableInterrupts();

    UARTprintf("\n Recording Load cell Sensor: \n");

    while(1){
        sensorVal = getLoadCellValue();
        vol = adc2Vol(sensorVal);
        UARTprintf("Temp Sensor reading is: %04u, vol is: %d\n", sensorVal, (uint32_t)vol);
        delayMS(1);
    }
}

void testMotor2(){
    initConsole();
    uint32_t period = 2000; //clock/freq: 20MHz/10KHZ
    Motor_Init(period); // Initialize with 10KHZ

    UARTprintf("\n Test Motor \n");

    while(1){
        enableMotor();
        Motor_SetDuty(.01, period);
        delayMS(1000);
        disableMotor();
        delayMS(1000);
    }

}

