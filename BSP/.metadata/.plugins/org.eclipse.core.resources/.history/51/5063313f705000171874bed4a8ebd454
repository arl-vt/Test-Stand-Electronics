// Load cell reading 2550 (nominal)

int main(void){

    uint32_t sensorVal;
    double loadCellVol, loadCellPound, output;

    float dutyCycle;
    int MotorDirection;



    //Setup system clock , 40MHZ
    Clock_set_fastest();

    //Configure Serial monitor
    initConsole();

    //Motor Initialize
    //uint32_t period = 2000; //clock/freq: 20MHz/10KHZ
    //Motor_Init(period); // Initialize with 10KHZ
    //UARTprintf("\n Motor Initialized! \n");

    //Load Cell Initialization
    LoadCell_init();
    UARTprintf("\n Load Cell Configured! \n");

    //Initialize debug LEDs
    RGBled_Init(0,1,1);

    //Controller initialize
   // uint32_t controllerFreq = 10000; //10kHZ
    //Controller_Init(controllerFreq);
    //setGoalForce(2600);
    //ControllerEnable();
    //UARTprintf("\n Controller Initialized! \n");

    //Enable system wide interrupts
    EnableInterrupts();

    while(1){
        sensorVal = getLoadCellValue();
        loadCellVol = adc2Vol(sensorVal); //((sensorVal*3.3)/4095);
        loadCellPound = Vol2Load(loadCellVol);
        output = measuredLoad();
        //loadCellVol = 1000*loadCellVol;
        //dutyCycle = getglobalduty()*100000;
        //MotorDirection = getglobaldirection();
        UARTprintf("%04u\n", output);
        UARTprintf("%04u    %04u    %04u\n", sensorVal, (uint32_t)(loadCellVol*1000), (uint32_t)(loadCellPound*1000));

        delayMS(1);
    }
}

